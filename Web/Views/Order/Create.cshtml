@model CreateOrderCommand

@{
    ViewData["Title"] = "Добавление заказа";
    
    var products = Model?.Products;
    var customers = (List<ClientDto>)ViewData["Customers"];
    var shopProducts = (List<ShopProductViewDto>)ViewData["ShopProducts"];
    var shop = (ShopDto)ViewData["Shop"];

    int index = products?.Count - 1 ?? 0;
}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form asp-action="Create" method="post">
                    <div class="card mt-4">
                        <div class="card-header p-3">
                            <h5 class="mb-2">@ViewData["Title"]</h5>
                            <input type="hidden" asp-for="@Model.ShopId" value="@shop.Id" />
                            <label class="mr-3">Выбранный магазин:</label> <b class="mr-3">@shop.Name</b>
                        </div>
                        <div class="card-body pb-0">
                            
                            <div class="row mb-0">
                                
                                <div class="input-group input-group-static mb-4">
                                    <label asp-for="@Model.CustomerId" class="ms-0">Выбрать покупателя</label>
                                    <select asp-for="@Model.CustomerId" asp-items="@(new SelectList(customers, "Id", "Fullname"))" class="form-control">
                                    </select>
                                </div>
                                <div class="input-group input-group-static mb-4">
                                    <label for="exampleFormControlSelect1" class="ms-0">Выбрать тип доставки</label>
                                    <select asp-for="@Model.DeliveryType" asp-items="Html.GetEnumSelectList<DeliveryType>()" class="form-control">
                                    </select>
                                </div>
                                @*<div class="input-group input-group-static mb-4">
                                    <label asp-for="@Model.CarrierId" class="ms-0">Example select</label>
                                    <select asp-for="@Model.CarrierId" asp-items="@(new SelectList(customers, "Id", "Fullname"))" class="form-control">
                                    </select>
                                </div>*@
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Описание</label>
                                    <input asp-for="@Model.Description" class="form-control">
                                </div>
                                @*<div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Магазин</label>
                                    <input asp-for="@Model.Sh" class="form-control">
                                </div>*@
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Адрес</label>
                                    <input asp-for="@Model.Address" class="form-control" id="address">
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Долгота</label>
                                    <input asp-for="@Model.Lat" class="form-control" id="lat">
                                </div>
                                <div class="input-group input-group-outline mb-3" >
                                    <label class="form-label">Широта</label>
                                    <input asp-for="@Model.Lang" class="form-control" id="lang">
                                </div>
                                <div class="row">
                                    <div id="map-container" style="width: 600px; height: 400px" class="col-12">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <div class="card-header p-3">
                            <h5 class="mb-0">Добавление товаров в заказ</h5>
                        </div>
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table" id="locationTable">
                                        <thead>
                                            <tr>
                                                <th scope="col">Название товара</th>
                                                <th scope="col">Количество</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (products != null && products.Count > 0)
                                            {
                                                for (int i = 0; i < products.Count; i++)
                                                {
                                                    <tr>
                                                        <td hidden><input name="products.Index" value="@i" /></td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <select asp-for="@products[i].ShopProductId" asp-items="@(new SelectList(shopProducts, "ShopProductId", "ProductName"))" class="form-control">
                                                                </select>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <input asp-for="@products[i].Amount" class="form-control">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <i class="i-Close text-light text-25 cursor-pointer delete-btn"></i>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td hidden><input name="products.Index" value="@index" /></td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <select name="products[@index].ShopProductId" asp-items="@(new SelectList(shopProducts, "ShopProductId", "ProductName"))" class="form-control">
                                                                </select>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <input name="products[@index].Amount" class="form-control">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-link text-dark pt-2 fixed-plugin-close-button">
                                                            <i class="material-icons">clear</i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <button id="addShopBtn" type="button" class="btn btn-primary float-right mb-4"><i class="i-Add mr-2"></i>Добавить товар</button>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <button class="btn bg-gradient-success w-100 mb-0 toast-btn" type="submit">Сохранить</button>
                                </div>
                                <div class="col-3">
                                    <a asp-action="Index" class="btn bg-gradient-dark w-100 mb-0">Назад</a>
                                </div>

                            </div>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="https://api-maps.yandex.ru/2.1/?apikey=5f4c994f-0203-4246-b7a2-23cf14243273&lang=ru_RU"></script>
<script type="text/javascript">

    ymaps.ready(function() {
        var map = new ymaps.Map("map-container", {
            center: [42.875969, 74.603701], // Set the initial map center coordinates
            zoom: 12 // Set the initial zoom level
        });

        var marker = new ymaps.Placemark(
            [42.875969, 74.603701],
            {
                hintContent: 'Marker Hint', // Tooltip text
                balloonContent: 'Marker Balloon' // Balloon text
            },
            {
                preset: 'islands#redIcon', // Marker icon style
                draggable: true // Allow marker dragging
            }
        );

        map.geoObjects.add(marker);

        marker.events.add('geometrychange', function(event) {
            // Get the current position of the marker
            var currentPosition = event.get('target').geometry.getCoordinates();

            var periodStart = $(this).closest('tr').children('td:eq(0)').text();


            // Access the latitude and longitude
            var markerLatitude = currentPosition[0];
            var markerLongitude = currentPosition[1];

            $('#lang').val(markerLongitude).change();
            $('#lat').val(markerLatitude).change();
            $('#lat').trigger('change');
            //var x = document.getElementById("myLI").parentElement
            getAddress(currentPosition);
        });

        // Определяем адрес по координатам (обратное геокодирование).
        function getAddress(coords) {
            marker.properties.set('iconCaption', 'поиск...');
            ymaps.geocode(coords).then(function(res) {
                var firstGeoObject = res.geoObjects.get(0);
                marker.properties
                    .set({
                        // Формируем строку с данными об объекте.
                        iconCaption: [
                            // Название населенного пункта или вышестоящее административно-территориальное образование.
                            firstGeoObject.getLocalities().length ? firstGeoObject.getLocalities() : firstGeoObject.getAdministrativeAreas(),
                            // Получаем путь до топонима, если метод вернул null, запрашиваем наименование здания.
                            firstGeoObject.getThoroughfare() || firstGeoObject.getPremise()
                        ].filter(Boolean).join(', '),
                        // В качестве контента балуна задаем строку с адресом объекта.
                        balloonContent: firstGeoObject.getAdministrativeAreas(),
                    });
                $('#address').val(firstGeoObject.getAddressLine()).change();
                address = document.getElementById('address');
                address.parentElement.classList.add('is-filled');
            });
        }
    });
</script>