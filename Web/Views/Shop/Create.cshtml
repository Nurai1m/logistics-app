@model CreateShopCommand

@{
    ViewData["Title"] = "Добавление магазина";
    var locations = Model?.Locations;

    int index = locations?.Count - 1 ?? 0;
}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form asp-action="Create" method="post">
                    <div class="card mt-4">
                        <div class="card-header p-3">
                            <h5 class="mb-0">@ViewData["Title"]</h5>
                        </div>
                        <div class="card-body pb-0">
                            <div class="row mb-3">
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Наименование</label>
                                    <input asp-for="@Model.Name" class="form-control">
                                    <span asp-validation-for="@Model.Name" class="invalid-feedback"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Описание</label>
                                    <input asp-for="@Model.Description" class="form-control">
                                    <span asp-validation-for="@Model.Description" class="invalid-feedback"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Ссылка</label>
                                    <input asp-for="@Model.Url" class="form-control">
                                    <span asp-validation-for="@Model.Url" class="invalid-feedback"></span>
                                </div>
                                @*<div class="col-3">
                                <button class="btn bg-gradient-success w-100 mb-0 toast-btn" type="submit">Сохранить</button>
                                </div>
                                <div class="col-3">
                                <a asp-action="Index" class="btn bg-gradient-dark w-100 mb-0">Назад</a>
                                </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <div class="card-header p-3">
                            <h5 class="mb-0">Добавить локацию магазина</h5>
                        </div>
                        <div class="card-body p-3">
                            <div class="row">
                                <div id="map-container" style="width: 600px; height: 400px" class="col-12">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table" id="locationTable">
                                        <thead>
                                            <tr>
                                                <th scope="col">Название</th>
                                                <th scope="col">Адрес</th>
                                                <th scope="col">Долгота</th>
                                                <th scope="col">Широта</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (locations != null && locations.Count > 0)
                                            {
                                                for (int i = 0; i < locations.Count; i++)
                                                {
                                                    <tr>
                                                        <td hidden><input name="products.Index" value="@i" /></td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <input asp-for="@locations[i].Name" class="form-control">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <textarea asp-for="@locations[i].Address" class="form-control"></textarea>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <input asp-for="@locations[i].Lat" class="form-control">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group input-group-outline mb-3">
                                                                <input asp-for="@locations[i].Lang" class="form-control">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <i class="i-Close text-light text-25 cursor-pointer delete-btn"></i>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td hidden><input name="products.Index" value="@index" /></td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <input name="locations[@index].Name" class="form-control">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <textarea name="locations[@index].Address" class="form-control address"></textarea>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <input name="locations[@index].Lat" class="form-control lat">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group input-group-outline mb-3">
                                                            <input name="locations[@index].Lang" class="form-control lang">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-link text-dark pt-2 fixed-plugin-close-button">
                                                            <i class="material-icons">clear</i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
@*                                    <button id="addShopBtn" type="button" class="btn btn-primary float-right mb-4"><i class="i-Add mr-2"></i>Добавить локацию</button>
*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <button class="btn bg-gradient-success w-100 mb-0 toast-btn" type="submit">Сохранить</button>
                                </div>
                                <div class="col-3">
                                    <a asp-action="Index" class="btn bg-gradient-dark w-100 mb-0">Назад</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="https://api-maps.yandex.ru/2.1/?apikey=5f4c994f-0203-4246-b7a2-23cf14243273&lang=ru_RU"></script>
